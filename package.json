{
  "name": "kaikokeke",
  "version": "0.0.0",
  "license": "MIT",
  "description": "A framework that provides helpers and accelerators for the construction of web apps",
  "homepage": "https://github.com/kaikokeke/kaikokeke",
  "bugs": "https://github.com/kaikokeke/kaikokeke/issues",
  "engines": {
    "node": "^12.20.0 || ^14.0.0",
    "yarn": ">=1.22.4 <2",
    "npm": "Please use yarn instead of NPM to install dependencies"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kaikokeke/kaikokeke.git"
  },
  "scripts": {
    "nx": "nx",
    "start": "nx serve",
    "build": "nx build",
    "test": "nx test",
    "lint": "nx workspace-lint && nx lint",
    "e2e": "nx e2e",
    "affected:apps": "nx affected:apps",
    "affected:libs": "nx affected:libs",
    "affected:build": "nx affected:build",
    "affected:e2e": "nx affected:e2e",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "affected:dep-graph": "nx affected:dep-graph",
    "affected": "nx affected",
    "format": "nx format:write",
    "format:write": "nx format:write",
    "format:check": "nx format:check",
    "update": "nx migrate latest",
    "workspace-generator": "nx workspace-generator",
    "dep-graph": "nx dep-graph",
    "help": "nx help",
    "prepare": "husky install",
    "commit": "cz -s",
    "commit:lint": "nx affected:lint --fix",
    "commit:format": "nx format:write",
    "postinstall": "ngcc --properties es2015 browser module main"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^12.0.0",
    "@angular/common": "^12.0.0",
    "@angular/compiler": "^12.0.0",
    "@angular/core": "^12.0.0",
    "@angular/forms": "^12.0.0",
    "@angular/platform-browser": "^12.0.0",
    "@angular/platform-browser-dynamic": "^12.0.0",
    "@angular/router": "^12.0.0",
    "@datorama/akita": "^6.2.0",
    "lodash-es": "4.17.21",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^12.0.0",
    "@angular-eslint/eslint-plugin": "~12.0.0",
    "@angular-eslint/eslint-plugin-template": "~12.0.0",
    "@angular-eslint/template-parser": "~12.0.0",
    "@angular/compiler-cli": "^12.0.0",
    "@angular/language-service": "^12.0.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@datorama/akita-ngdevtools": "^6.0.0",
    "@nrwl/angular": "12.5.6",
    "@nrwl/cli": "12.5.6",
    "@nrwl/eslint-plugin-nx": "12.5.6",
    "@nrwl/jest": "12.5.6",
    "@nrwl/linter": "12.5.6",
    "@nrwl/node": "12.5.6",
    "@nrwl/nx-cloud": "12.2.7",
    "@nrwl/tao": "12.5.6",
    "@nrwl/workspace": "12.5.6",
    "@types/jest": "26.0.8",
    "@types/lodash-es": "4.17.4",
    "@types/node": "14.14.33",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "8.2.0",
    "eslint": "7.22.0",
    "eslint-config-prettier": "8.1.0",
    "husky": "^6.0.0",
    "jest": "27.0.3",
    "jest-extended": "^0.11.5",
    "jest-preset-angular": "9.0.3",
    "lodash": "4.17.21",
    "ng-packagr": "^12.0.0",
    "prettier": "2.3.1",
    "rxjs-marbles": "^7.0.0",
    "sonarqube-scanner": "^2.8.0",
    "ts-jest": "27.0.3",
    "ts-node": "~9.1.1",
    "typescript": "~4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "kaikokeke",
          "devtools",
          "common",
          "angular",
          "environment",
          "apps"
        ]
      ],
      "signed-off-by": [
        2,
        "always",
        "Signed-off-by:"
      ]
    }
  }
}
